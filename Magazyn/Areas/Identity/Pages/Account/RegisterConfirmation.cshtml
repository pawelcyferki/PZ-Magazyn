@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Nie posiadamy jeszcze serwera wychodzącego dla poczty e-mail. W normalmnych okolicznościach wysyłamy taką wiadomość: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij, aby potwierdzić adres.</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

